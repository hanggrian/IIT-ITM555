<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:foreground="?selectableItemBackground">

  <androidx.gridlayout.widget.GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:useDefaultMargins="true">

    <ImageView
      android:id="@+id/image"
      android:layout_width="72dp"
      android:layout_height="72dp"
      android:contentDescription="@string/img_monster_desc"
      app:layout_column="0"
      app:layout_row="0"
      app:layout_rowSpan="2"/>

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/nameText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
      app:layout_column="1"
      app:layout_columnWeight="1"
      app:layout_row="0"/>

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/powerText"
      style="@style/Widget.TextView.Caption"
      app:drawableStartCompat="@drawable/caption_power"
      app:layout_column="2"
      app:layout_row="0"/>

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/accuracyText"
      style="@style/Widget.TextView.Caption"
      app:drawableStartCompat="@drawable/caption_accuracy"
      app:layout_column="3"
      app:layout_row="0"/>

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/ppText"
      style="@style/Widget.TextView.Caption"
      app:drawableStartCompat="@drawable/caption_point"
      app:layout_column="4"
      app:layout_row="0"/>

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/descriptionText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
      app:layout_column="1"
      app:layout_columnSpan="4"
      app:layout_columnWeight="1"
      app:layout_row="1"/>
  </androidx.gridlayout.widget.GridLayout>
</androidx.cardview.widget.CardView>
